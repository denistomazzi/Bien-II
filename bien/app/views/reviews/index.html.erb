<% content_for :page_title, "Homepage" %>

<nav class="filters">
   <%= link_to "All restaurants", root_path %>

   <div>
   <%= link_to "$", root_path(price: 1, cuisine: @cuisine, location: @location)%>
   <%= link_to "$$", root_path(price: 2, cuisine: @cuisine, location: @location)%>
   <%= link_to "$$$", root_path(price: 3, cuisine: @cuisine, location: @location)%>
  </div>

  <div>
   <%= link_to "Indian", root_path(cuisine: "Indian", price: @price, @location) %>
   <%= link_to "Mexican", root_path(cuisine: "Mexican", price: @price, @location) %>
   <%= link_to "American", root_path(cuisine: "American", price: @price, @location) %>
  </div>

  <form action="/">
    <input type="text" name="location" 
      placeholder="search location..." value="<%= @location %>">
  
       <input type="hidden" name="price" value="<%= @price %>">5.
       <input type="hidden" name="cuisine" value="<%= @cuisine %>">
      </form>

</nav>


<% @reviews.each do |review| %>

  <div class="review"> 
  
   <%= link_to review.title, review_path(review) %> 
  
  </div>


<% end %>